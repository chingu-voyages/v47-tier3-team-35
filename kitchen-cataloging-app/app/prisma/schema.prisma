generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
type Image{
  s3ObjKey String?
  url String?
}
// User model
model User {
  //id is auto-generated by Mongo Db and is mapped to the property _id
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  email String @unique
  clerkId String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  foods Food[]
  rooms Room[]
  logs Log[]
  groceryItems GroceryItem[]
  foodItemVersions FoodItemVersion[]
}

model Room {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String? @db.ObjectId
  foods Food[]
  groceryItems GroceryItem[]
  itemCount Int @default(0)
  createdAt DateTime @default(now())
  @@fulltext([title])
}

// food items model. Stored as an array in User
model Food {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) //purchase date
  updatedAt DateTime @updatedAt 
  title String //limit to max 30 chars
  description String? @default("") //limit to 400 chars  
  labels String[] @default([]) //limit to 20 items
  image Image?
  // this is total count of all food item instances (this counter is incremented)
  //whenever an item is added or deleted to keep track of all items
  amount Int? @default(0)
  //this is the avg price we give to each item depending on recent buyer history
  //we continously change this according to food item versions added
  price Float? @default(0.00) //limit to 2 decimal places
  //food specific key
  threshold Int?
  logs Log[] //stores log for each time user adds or subtracts this food
  roomTitle String
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId
  room Room? @relation(fields: [roomId], references: [id])
  roomId String? @db.ObjectId
  foodItemVersions FoodItemVersion[]
}
model FoodItemVersion {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) //purchase date
  updatedAt DateTime @updatedAt 
  expirationDate DateTime
  quantity Int // denotes how many of an item exists with the same price
  price Float //limit to 2 decimal places
  foodId String? @db.ObjectId
  userId String? @db.ObjectId
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  food Food? @relation(fields: [foodId], references: [id], onDelete: Cascade)
}
model GroceryItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) //date added to list
  updatedAt DateTime @updatedAt
  title String
  description String? @default("")
  labels String[] @default([])
  image Image?
  amount Int
  userId String @db.ObjectId
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  //grocery item specific keys
  room Room? @relation(fields: [roomId], references: [id])
  roomId String? @db.ObjectId 
  roomTitle String
}
// Food log model -- created upon every purchase of food. Stored as an array in Food
model Log {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  price Float //limit to 2 decimal places
  // quantity
  amount Int
  timestamp DateTime @default(now())
  userId String? @db.ObjectId
  foodId String? @db.ObjectId
  // totalCost Float //limit to 2 decimal places
  food Food? @relation(fields: [foodId], references: [id])
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}